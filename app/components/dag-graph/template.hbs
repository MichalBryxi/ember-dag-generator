{{#with (area 1280 800 margin="10 10 10 10") as |plotArea|}}
  {{#plaid-plot
    (linear-scale domain range nice=true)
    (linear-scale domain range nice=true)
    plotArea as |plot|}}

    {{#if isEditMode}}
      {{dag-grid plot=plot gap=gap repeatX=sizeX repeatY=sizeY}}
    {{/if}}

    {{dag-start plot=plot coordinates=start color=color gap=gap}}

    {{#each edges as |edge|}}
      {{dag-edge plot=plot margin=margin point=edge color=color gap=gap}}
    {{/each}}

    {{#each vertices as |vertex|}}
      {{dag-vertex plot=plot margin=margin coordinates=vertex color=color gap=gap}}
    {{/each}}

    {{#each arrows as |arrow|}}
      {{dag-arrow plot=plot margin=margin point=arrow color=color gap=gap}}
    {{/each}}

    {{#if isEditMode}}
      {{dag-preview plot=plot tool=selectedTool coordinates=hover gap=gap margin=margin}}
      {{dag-overlay entered=(action "showToolPreview") clicked=(action "toggleGridCell") plot=plot gap=gap repeatX=sizeX repeatY=sizeY}}
    {{/if}}

  {{/plaid-plot}}
{{/with}}
